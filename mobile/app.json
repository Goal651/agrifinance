{
  "expo": {
    "name": "AgriFinance",
    "slug": "agrifinance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/hacker.jpg",
    "scheme": "agrifinance",
    "userInterfaceStyle": "light",
    "description": "Modern agricultural finance management app with glassmorphism UI",
    "primaryColor": "#22c55e",
    "backgroundColor": "#f8fafc",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.agrifinance"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/hacker.jpg",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.agrifinance"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/hacker.jpg"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/hacker.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#f8fafc"
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
